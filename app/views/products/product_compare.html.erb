
<div class="body-wrap">

 	<div class="body-container">

   	<div class="body-header">Product Compare</div>

      <div class="body-content">
    
        <div class="container">
            <div class="row">
           
                        <div class="col-md-12">
           
                            <ol class="breadcrumb">

                                <% @taxo=[$taxo.flatten+$main_cat_name.flatten].flatten.reverse%>

                                

 <% @taxo.each do |i|%>

<% if Taxon.where(:id=>i.id).present?%>
<li><%=link_to i.main_cat_name, products_sub_category_path(i.id)%></li>
<%else%>
 <li><%=link_to i.sub_cat_name, products_sub_category_path(i.id)%></li>
 <%end%>
                                
                                <%end%>
                
                            </ol>
                            
                        </div>
                    </div>
		
      		<div class="row">
      
          	<div class="col-md-12">
      
             	<div class="product-compare">
      
                <table class="table">

                  <i class="fa fa-dot-circle-o" style="font-size: 15px; color: rgb(0, 102, 255);"></i>&nbsp;Indicates product differences.<br><br>

                 	 

                    <%t=1%>

                 	    <%@names.each do |i|%>

                   			<tr>

                          <%if t < 6 %>

                            <td></td>

                              <%$pros.each do |p|%>
                              <%if t == 1%>
                              <td><%=link_to_if $pros.count > 2,"Remove item", products_product_compare_path(p.item_id)%></td>
                                <%elsif t == 2 %>
                                     
                                  <%@temp=Manufacture.where(:id=>BSON::ObjectId.from_string(Product.where(:id=>p.id).pluck(:manu_id)[0])).pluck(i.to_sym)[0]%>
<td style="background-color: #242d35; color:white;"><strong><%=@temp%></strong></td>

                                <%elsif t == 5%>

                                  <td><%=image_tag p.image[0]%></td>    

                                <%elsif t == 3%>
                                                                   
                                 <td><%= link_to Product.where(:id=>p.id).pluck(i.to_sym)[0],products_product_desc_path(p.id)%></td>
                                 <%else%>
                                  <td><%=Product.where(:id=>p.id).pluck(i.to_sym)[0]%></td>
                                <%end%>
                                
                              <%end%>

                      
                              
                          <%else%>
                          
                          <tbody>

                            <%@pp=[]%>

                         <%$pros.each{|l| @pp << Product.where(:id=>l.id).pluck(:property)[0][i]}%>

                            <%if @pp.uniq.count > 1%>

                             <td><i class="fa fa-dot-circle-o" style="font-size: 15px; color: rgb(0, 102, 255);"></i>&nbsp;<%=i%></td> 

                          <%else%>

                            <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%=i%></td>

                          <%end%>
                          
                              <%$pros.each do |p|%>

                                <%@temp=Product.where(:id=>p.id).pluck(:property)[0]%>

                                <%if @pp.uniq.count > 1%>
                                <td style="color: rgb(0, 102, 255);"><%=@temp[i]%></td>
                                <%else%>
                                <td><%=@temp[i]%></td>

                                <%end%>
                 	      	    <%end%>

                          <%end%>

               	        </tr>
                        
                        <%t=t+1%>
                        
                      <%end%>
                                            	
									 </tbody>
								  
                </table>
                
              </div>

            </div>

          </div>

        </div>
                    		
       <div class="clearfix"></div>
                           
      </div>

    <div class="clearfix"></div>

  </div>
 
 <div class="clearfix"></div> 

</div>
