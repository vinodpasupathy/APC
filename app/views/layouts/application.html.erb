                            <%next if pp[1][n] == nil%>
                            <%next if @check.include?(pp[1][n])%>
                            <%@id=[]%>
                            <%@pros.collect{|o| @id << o[0] if o[1].to_a.include?({n=>o[1][n]}.flatten )}%>
                                                           <li>

                              <div class="checkbox">

                                <label>

                                  <%=check_box_tag 'is[]', @id.map{|a| a }.flatten.uniq, false,{:onclick=>"chkcontrol();"}%>

                                     <%=pp[1][n]%>

                                </label>

                              </div>

                              </li>

                              <%@check<< pp[1][n]%>
                              <%end%>
                              <%@id.clear%>
                                </ul>
                           
                        </div>
                    </div>
                </div>
                <%t=t+1%>
                <%end%>
                
                              
