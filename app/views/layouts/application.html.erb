<script language="javascript">

 function validat()

 { var chks = document.getElementsByName('is[]');

 var checkCount = 0;

 for (var i = 0; i < chks.length; i++)

 { if (chks[i].checked)

 { checkCount++; } }

 if (checkCount < 1)

 { alert("Please Select at least one.");

 return false; }

 else { return true; } }

</script>

